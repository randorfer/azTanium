{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "computerNamePrefix": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "CORPNET",
      "metadata": {
        "description": "Virtual Network Name"
      }
    },
    "virtualNetworkResourceGroupName": {
      "type": "string",
      "defaultValue": "CORPNET",
      "metadata": {
        "description": "Virtual Networking Resource Group"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "client",
      "metadata": {
        "description": "Subnet for VM"
      }
    },
    "adminUserName": {
      "type": "string",
      "metadata": {
        "description": "VM Administrator Name"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "VM Admin Password"
      }
    },
    "templateRootUri": {
        "type": "string",
        "defaultValue": "https://raw.githubusercontent.com/randorfer/azTanium/master/"
    },
    "win7ClientCount": {
        "type": "int",
        "defaultValue": 3 
    },
    "win10ClientCount": {
        "type": "int",
        "defaultValue": 3 
    },
    "ubuntu1604ClientCount": {
        "type": "int",
        "defaultValue": 3 
    },
     "centos73ClientCount": {
        "type": "int",
        "defaultValue": 3 
    }
  },
  "variables": {
    "size": "Standard_D2_v2",
    "vmTemplate": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/multi-vm-n-nic-m-storage/azuredeploy.json')]"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "Win7-Clients",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vmTemplate')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualMachinesSettings": {
            "value": {
              "namePrefix": "[concat(parameters('computerNamePrefix'),'win7')]",
              "computerNamePrefix": "[concat(parameters('computerNamePrefix'),'-win7')]",
              "size": "[variables('size')]",
              "osType": "windows",
              "adminUsername": "[parameters('adminUserName')]",
              "adminPassword": "[parameters('adminPassword')]",
              "osAuthenticationType": "password",
              "nics": [
                {
                  "isPublic": "true",
                  "subnetName": "[parameters('subnetName')]",
                  "publicIPAllocationMethod": "Dynamic",
                  "privateIPAllocationMethod": "Dynamic",
                  "enableIPForwarding": false,
                  "dnsServers": [ ],
                  "isPrimary": "true",
                  "domainNameLabelPrefix": ""
                }
              ],
              "imageReference": {
                "publisher": "MicrosoftVisualStudio",
                "offer": "Windows",
                "sku": "Win7-SP1-Ent-N",
                "version": "latest"
              },
              "dataDisks": { 
                "count": 0,
                "properties": {
                  "diskSizeGB": 128,
                  "caching": "ReadWrite",
                  "createOption": "Empty"
                }
              },
              "osDisk": {
                "caching": "ReadWrite"
              },
              "extensions": [
              ],
              "availabilitySet": {
                "useExistingAvailabilitySet": "No",
                "name": "win7"
              }
            }
          },
          "virtualNetworkSettings": {
            "value": {
              "name": "[parameters('virtualNetworkName')]",
              "resourceGroup": "[parameters('virtualNetworkResourceGroupName')]"
            }
          },
          "buildingBlockSettings": {
            "value": {
              "storageAccountsCount": 1,
              "vmCount": "[parameters('win7ClientCount')]",
              "vmStartIndex": 1
            }
          },
          "storageAccountSKU": {
            "value": "Standard_LRS"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "Win10-Clients",
