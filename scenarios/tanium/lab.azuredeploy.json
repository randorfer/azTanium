{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/randorfer/azTanium/master/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "deploymentSize": {
      "type": "string",
      "allowedValues": [
        "3k",
        "10k",
        "35k",
        "75k",
        "150k",
        "400k"
      ],
      "defaultValue": "3k",
      "metadata": {
        "description": "Relative path decider for the template parameters."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "CORPNET",
      "metadata": {
        "description": "Name of the virutal network to deploy compute to"
      }
    },
    "TSServerSubnetName": {
      "type": "string",
      "defaultValue": "web",
      "metadata": {
        "description": "The name of the subnet to place the Tanium Server(s) on"
      }
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "testadmin"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "computerNamePrefix": {
      "type": "string",
      "defaultValue": "taniumServer"
    }
  },
  "variables": {
    "parameterRootUri": "https://raw.githubusercontent.com/randorfer/azTanium/master/scenarios/tanium/parameters", 
    "templates": {
      "deployment": {
        "taniumCompute": "[concat(parameters('templateRootUri'), 'scenarios/tanium/templates/TS-S-', parameters('deploymentSize'), '.json')]",
        "virtualNetwork": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/vnet-n-subnet/azuredeploy.json')]",
        "networkSecurityGroup": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/networkSecurityGroups/azuredeploy.json')]",
        "clientCompute": "[concat(parameters('templateRootUri'), 'scenarios/clients/azuredeploy.json')]"
      },
      "parameter": {
        "virtualNetwork": "[concat(variables('parameterRootUri'), '/virtualNetwork.parameters.json')]",
        "networkSecurityGroup": "[concat(variables('parameterRootUri'), '/networkSecurityGroups.parameters.json')]"
      }
    },
    "namePrefix": "[parameters('computerNamePrefix')]"
  },
  "resources": [
     {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "tanium-vnet-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualNetwork]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.virtualNetwork]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "tanium-nsg-deployment",
      "dependsOn": [
        "tanium-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.networkSecurityGroup]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.networkSecurityGroup]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "tanium-server-deployment",
      "dependsOn": [
          "tanium-vnet-deployment",
          "tanium-nsg-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.taniumCompute]"
        },
        "parameters": {
          "namePrefix": { "value": "[parameters('computerNamePrefix')]" },
          "computerNamePrefix": { "value": "[variables('namePrefix')]" },
          "virtualNetworkName": { "value": "[parameters('virtualNetworkName')]" },
          "virtualNetworkResourceGroupName": { "value": "[resourceGroup().name]" },
          "subnetName": { "value": "[parameters('TSServerSubnetName')]" },
          "adminUserName": { "value": "[parameters('adminUserName')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" },
          "templateRootUri": { "value": "[parameters('templateRootUri')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "client-deployment",
      "dependsOn": [
          "tanium-vnet-deployment",
          "tanium-nsg-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.clientCompute]"
        },
        "parameters": {
          "computerNamePrefix": { "value": "client" },
          "virtualNetworkName": { "value": "[parameters('virtualNetworkName')]" },
          "virtualNetworkResourceGroupName": { "value": "[resourceGroup().name]" },
          "subnetName": { "value": "[parameters('TSServerSubnetName')]" },
          "adminUserName": { "value": "[parameters('adminUserName')]" },
          "adminPassword": { "value": "[parameters('adminPassword')]" },
          "templateRootUri": { "value": "[parameters('templateRootUri')]" }
        }
      }
    }
  ],
  "outputs": {
  }
}
