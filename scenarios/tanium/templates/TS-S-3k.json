{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namePrefix": {
      "type": "string"
    },
    "computerNamePrefix": {
      "type": "string"
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Virtual Network Name"
      }
    },
    "virtualNetworkResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Virtual Networking Resource Group"
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "Subnet for VM"
      }
    },
    "adminUserName": {
      "type": "string",
      "metadata": {
        "description": "VM Administrator Name"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "VM Admin Password"
      }
    },
    "templateRootUri": {
        "type": "string"
    },
    "taniumLicenseFileURI": {
        "type": "securestring"
    }
  },
  "variables": {
    "vmTemplate": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/multi-vm-n-nic-m-storage/azuredeploy.json')]",
    "size": "Standard_DS3_v2",
    "deploymentName": "Tanium-Server-S-3k",
    "settingsConfigMapperUri": "[concat(parameters('templateRootUri'), 'templates/resources/Microsoft.Compute/virtualMachines/extensions/vm-extension-passthrough-settings-mapper.json')]",
    "DSCSettings": {
      "modulesUrl": "https://github.com/randorfer/azTanium/blob/master/scenarios/tanium/configuration/taniumServer.ps1.zip?raw=true",
      "configurationFunction": "taniumServer.ps1\\taniumServer"
    },
    "scriptName": "Set-TaniumLicenseFile.ps1",
    "LicenseInstallSettings": {
      "fileUris": "[concat(parameters('templateRootUri'), 'scenarios/tanium/scripts/', variables('scriptName'))]",
      "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File .\\', variables('scriptName'), ' \"', parameters('taniumLicenseFileURI'), '\" \"C:\\Program Files\\Tanium\\Tanium Server\\tanium.license\"')]"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "[variables('deploymentName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('vmTemplate')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualMachinesSettings": {
            "value": {
              "namePrefix": "[parameters('namePrefix')]",
              "computerNamePrefix": "[parameters('computerNamePrefix')]",
              "size": "[variables('size')]",
              "osType": "windows",
              "adminUsername": "[parameters('adminUserName')]",
              "adminPassword": "[parameters('adminPassword')]",
              "osAuthenticationType": "password",
              "nics": [
                {
                  "isPublic": "true",
                  "subnetName": "[parameters('subnetName')]",
                  "publicIPAllocationMethod": "Dynamic",
                  "privateIPAllocationMethod": "Dynamic",
                  "enableIPForwarding": false,
                  "dnsServers": [ ],
                  "isPrimary": "true",
                  "domainNameLabelPrefix": ""
                }
              ],
              "imageReference": {
                "publisher": "MicrosoftWindowsServer",
                "offer": "WindowsServer",
                "sku": "2012-R2-Datacenter",
                "version": "latest"
              },
              "dataDisks": {
                "count": 1,
                "properties": {
                  "diskSizeGB": 128,
                  "caching": "None",
                  "createOption": "Empty"
                }
              },
              "osDisk": {
                "caching": "ReadWrite"
              },
              "extensions": [
                {
                  "name": "taniumServer-config-ext",
                  "settingsConfigMapperUri": "[variables('settingsConfigMapperUri')]",
                  "publisher": "Microsoft.Powershell",
                  "type": "DSC",
                  "typeHandlerVersion": "2.20",
                  "autoUpgradeMinorVersion": true,
                  "settingsConfig": {
                    "modulesUrl": "[variables('DSCSettings').modulesUrl]",
                    "configurationFunction": "[variables('DSCSettings').configurationFunction]"
                  },
                  "protectedSettingsConfig": { }
                },
                {
                  "name": "taniumServer-license-install-ext",
                  "settingsConfigMapperUri": "[variables('settingsConfigMapperUri')]",
                  "publisher": "Microsoft.Compute",
                  "type": "CustomScriptExtension",
                  "typeHandlerVersion": "1.8",
                  "autoUpgradeMinorVersion": true,
                  "settingsConfig": {
                    "modulesUrl": "[variables('LicenseInstallSettings').fileUris]"
                  },
                  "protectedSettingsConfig": {
                    "commandToExecute": "[variables('LicenseInstallSettings').commandToExecute]" 
                   }
                }
              ],
              "availabilitySet": {
                "useExistingAvailabilitySet": "No",
                "name": "taniumServer"
              }
            }
          },
          "virtualNetworkSettings": {
            "value": {
              "name": "[parameters('virtualNetworkName')]",
              "resourceGroup": "[parameters('virtualNetworkResourceGroupName')]"
            }
          },
          "buildingBlockSettings": {
            "value": {
              "storageAccountsCount": 1,
              "vmCount": 1,
              "vmStartIndex": 1
            }
          }
        }
      }
    }
  ],
  "outputs": {
  }
}
